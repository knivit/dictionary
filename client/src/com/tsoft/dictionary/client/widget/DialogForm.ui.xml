<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:d='urn:import:com.tsoft.dictionary.client.widget'>

    <ui:style>
    .controlPanel {
        align: right;
    }
    </ui:style>

    <g:DockLayoutPanel unit='EM'>
        <g:center>
            <g:HTMLPanel ui:field='contentPanel'>
                <div id="content"/>
            </g:HTMLPanel>
        </g:center>

        <g:south size='4'>
            <g:HorizontalPanel styleName='style.controlPanel'>
                <g:Button text='Ok' ui:field='okButton'/>
                <g:Button text='Cancel' ui:field='cancelButton'/>
            </g:HorizontalPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>
