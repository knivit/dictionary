<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:d='urn:import:com.tsoft.dictionary.client.app.wordtrainer'>

    <g:DockLayoutPanel unit='EM'>
        <g:north size='15'>
          <g:VerticalPanel>
            <d:DictionaryPanel ui:field='dictionaryPanel'/>
            <d:WordPanel ui:field='wordPanel'/>
            <d:TranslationPanel ui:field='translationPanel'/>
          </g:VerticalPanel>
        </g:north>

        <g:center>
          <d:HintPanel ui:field='hintPanel'/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
